<% include partials/header %>
<style>
	input[type=text], input[type=number], input[type=email], input[type=date], textarea, select {
	  padding: 8px 10px;
	  margin: 8px 0;
	  display: inline-block;
	  border: 1px solid #ccc;
	  border-radius: 4px;
	  box-sizing: border-box;
	}

	input[type=submit], button[type=button] {
		background-color: rgb(0,123,255);
		color: white;
		padding: 8px 20px;
		margin: 8px 0;
		border: none;
		border-radius: 4px;
		cursor: pointer;
		transition: 0.3s;
		background-image: linear-gradient(to bottom right, rgb(0,0,0,0), rgb(58,175,169));
	}

	input[type=submit]:hover, button[type=button]:hover{
		background-color: #2b7a78;
	}
</style>
</head>
<body style="background-color: black; background-image: linear-gradient(to right,  rgb(0,123,255, 0.5), rgb(58,175,169,1),  rgb(0,123,255, 0.5));">
	<div style="margin: auto; text-align: center; margin-top: 15%; width: 50%; border-radius: 10px; background-color: #f2f2f2; padding-top: 1%; padding-bottom: 1%;">
		<h1>Search For a Movie</h1>
		<br>
		<form action="/results" method="get">
			<input type="text" name="search" placeholder="Enter Movie Title...." style="width: 70%;">
			<input type="submit">
		</form>
	</div>
</body>
</html>